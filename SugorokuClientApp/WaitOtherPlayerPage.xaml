<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SugorokuClientApp.WaitOtherPlayerPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="8*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>
            <Grid x:Name="PlayerViewer">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackLayout x:Name="Player1Stack" />
                <StackLayout Grid.Row="0" Grid.Column="1" x:Name="Player2Stack" />
                <StackLayout Grid.Row="1" Grid.Column="0" x:Name="Player3Stack" />
                <StackLayout Grid.Row="1" Grid.Column="1" x:Name="Player4Stack" />
            </Grid>
            <Button Grid.Row="1" Text="ゲーム開始" x:Name="GameStartButton" />
        </Grid>
    </ContentPage.Content>
</ContentPage>