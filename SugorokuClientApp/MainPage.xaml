<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SugorokuClientApp.MainPage">

    <StackLayout VerticalOptions="CenterAndExpand">
        <Image x:Name="LogoImage" HeightRequest="150" />
        <Entry x:Name="ServerIpAddress" Text="127.0.0.1" Placeholder="サーバーのIPアドレス" />
        <Entry x:Name="ServerPort" Text="9235" Placeholder="サーバーのポート番号" />
        <Entry x:Name="PlayerNameEditor" Placeholder="プレイヤーの名前" />
        <Entry x:Name="RoomNameEditor" Placeholder="部屋名" />
        <ImageButton x:Name="StartButton" Clicked="OnStartButtonClicked" Aspect="AspectFit"
                     VerticalOptions="CenterAndExpand" BackgroundColor="White" />
    </StackLayout>

</ContentPage>